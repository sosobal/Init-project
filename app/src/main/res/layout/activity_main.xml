<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Homepage"
       android:id="@+id/btHomepage"/>

    <Button
        android:id="@+id/btDial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dial" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/btCall"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/btSms"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/btMap"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recog"
        android:id="@+id/btRecog"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tv"
        android:id="@+id/tvRecog"/>

 <EditText
     android:id="@+id/edTts"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:ems="10"
     android:inputType="textPersonName"
     android:text="TTS" />

 <Button
     android:id="@+id/btTts"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="TTS" />

 <Button
     android:id="@+id/btEcho"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="ECHO" />

 <EditText
     android:id="@+id/etDealy"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:ems="10"
     android:inputType="textPersonName"
     android:text="1" />

 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="CONTACT"
     android:id="@+id/btContact"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBitmap"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btBitmap"
        android:text="Bitmap"/>
</LinearLayout>